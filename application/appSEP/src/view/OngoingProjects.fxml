<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


      <HBox prefHeight="307.0" prefWidth="488.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.OngoingProjectsController">
         <VBox prefHeight="400.0" prefWidth="178.0">
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="178.0">
               <Label alignment="CENTER" style="-fx-font-weight: bold;" text="Your projects">
                  <font>
                     <Font size="23.0" />
                  </font>
               </Label>
            </HBox>
            <VBox alignment="CENTER" prefHeight="199.0" prefWidth="177.0">
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <ComboBox fx:id="comboBox" onAction="#onComboBoxSelectionChange" prefHeight="27.0" prefWidth="113.0" promptText="New Project" />
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="111.0" text="Remove" />
               </HBox>
               <HBox alignment="CENTER" layoutX="10.0" layoutY="143.0" prefHeight="100.0" prefWidth="200.0">
                  <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="106.0" text="Send to Finished" />
               </HBox>
         <HBox alignment="CENTER" layoutX="10.0" layoutY="143.0" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Button mnemonicParsing="false" onAction="#detailsPressed" prefHeight="40.0" prefWidth="106.0" text="Details" />
            </children>
         </HBox>
            </VBox>
         </VBox>
         <VBox prefHeight="274.0" prefWidth="313.0">
            <HBox prefHeight="224.0" prefWidth="319.0">
               <TableView fx:id="projectListTable" prefHeight="182.0" prefWidth="311.0">
                  <columns>
                     <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                     <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title" />
                     <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
               <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
                  </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <HBox.margin>
               <Insets right="10.0" top="10.0" />
            </HBox.margin>
               </TableView>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
               <Label fx:id="errorLabel" text="Error Label" textFill="#d13939">
                  <font>
                     <Font size="21.0" />
                  </font>
               </Label>
            </HBox>
         </VBox>
      </HBox>
